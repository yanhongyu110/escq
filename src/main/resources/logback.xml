<?xml version="1.0" encoding="UTF-8"?>

<!-- For assistance related to logback-translator or configuration  -->


<configuration>



    <property name="log.root.level" value="debug" />
    <property name="log.other.level" value="debug" />


    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <Encoding>UTF-8</Encoding>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %5p [%t] [%c{1}]:%L - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${webapp.root}/WEB-INF/ccc.log</file>
        <!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
        <!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
        <!--for further documentation-->

        <Encoding>UTF-8</Encoding>
        <encoder>
            <pattern>%d %p [%t] [%c]:%L - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/%d{yyyy-MM-dd-HH'.log'}</fileNamePattern>
        </rollingPolicy>
    </appender>
    <logger name="org.springframework" level="debug"/>
    <logger name="org.springframework.remoting" level="debug"/>
    <logger name="org.springframework.scheduling.quartz" level="debug"/>
    <logger name="org.springframework.data.jpa" level="debug"/>
    <logger name="org.cometd" level="debug"/>
    <logger name="ch.qos.logback" level="debug"/>
    <logger name="com.springapp.mvc" level="debug"/>
    <logger name="Java.sql.PreparedStatement" level="debug"/>




    <!--<appender name="jms" class="ch.qos.logback.classic.net.JMSTopicAppender">-->
        <!--<InitialContextFactoryName>-->
            <!--org.apache.activemq.jndi.ActiveMQInitialContextFactory-->
        <!--</InitialContextFactoryName>-->
        <!--<ProviderURL>tcp://127.0.0.1:61616</ProviderURL>-->
        <!--<TopicConnectionFactoryBindingName>ConnectionFactory</TopicConnectionFactoryBindingName>-->
        <!--<TopicBindingName>logTopic</TopicBindingName>-->
    <!--</appender>-->




    <root level="debug">
        <appender-ref ref="stdout"/>
        <appender-ref ref="logfile"/>
        <!--<appender-ref ref="jms"/>-->
    </root>


</configuration>