.service_content{
	margin-bottom: 61px;


}
.service_content_pj{
	margin-top:0px !important;
	/* margin-bottom: 15px; */
}
.service_content_pj ul{
	padding:20px 15px 8px 15px;
    margin:0;
    
    border-bottom:1px solid #f8f8f8;
    overflow: hidden;
}
.service_content_pj .news_title{
	width: 10%;
    float:left;
	font-size: 15px;
    
    margin-right:5%;
}
.service_content_pj .news_title img{width:100%;border-radius: 50%;}
.service_content_pj .news_time{
	width: 5%;
    float:right;
    text-align: right;
}
.service_content_pj .news_time img{width:100%}
.news_content {
    float:left;
    width: 68%;
    background: #fff;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #eee;
}
.service_content_pj ul .news_content p{
	
	font-size: 14px;
}
.f_times{    text-align: center;
    background: #ddd;
    width: 40%;
    margin: 0 auto;
    padding:4px 0px;
    border-radius: 20px;    color: #fff;}
.service_content_pj ul .news_content span{
	color:#a6a6a6;
	font-size: 12px;
}
.loading{
	
	text-align: center;
	line-height: 50px;
	font-size: 16px;
}
.my_date_bt .title{
	position: fixed;
    top: 0;
    z-index: 100;
    width: 100%;
}