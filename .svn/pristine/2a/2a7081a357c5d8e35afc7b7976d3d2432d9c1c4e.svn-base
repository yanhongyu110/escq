        .personer_mes .my_date .operation {
            position: absolute;
            bottom: 20px;
            right: 2%;
            width: 100%;
            font-size: 14px;
        }

        .personer_mes .my_date .operation a {
            display: inline-block;
            float: right;
            padding: 1px 5px;
            margin-right: 5px;
            border: 1px solid #f60;
            color: #f60;
            border-radius: 4px;
        }

        .personer_mes .my_date .operation span {
            display: inline-block;
            float: right;
            padding: 1px 5px;
            margin-right: 5px;
            border: 1px solid #ddd;
            color: #999;
