    <select id="selectTop" resultMap="demandMap">
		 		SELECT
		*
		FROM
		demand
		INNER JOIN log_info ON demand.DEM_LOGID = log_info.LOG_ID
		WHERE
        1=1
		AND  DEM_STATE=2
		<if test="module!=null and module != '' ">
            AND demand.DEM_TYPETREE LIKE '%${module}%'
        </if>
		ORDER BY
		demand.DEM_CREATETIME ASC
		LIMIT 0,${top}
	</select>
	
