function getQueryString(name) { 
	var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i"); 
	var r = window.location.search.substr(1).match(reg); 
	if (r != null) return decodeURI(r[2]); return null; 
}

var money = getQueryString("money");
$(function(){
	var ua = navigator.userAgent.toLowerCase(); 
	if(ua.match(/MicroMessenger/i)=="micromessenger") { 
		if(getOpenIdOnCk()==null){
			getOpenId();
		}
	}
	/**
	 * 验证表单
	 */
	$("#form").validate({
		rules : {
			money : {
				required : true,
				digits : true,
				min:1,
				validatMoney:true
			},
		},
		messages : {
			money : {
				required : "<em style='color: red'>必填</em>",
				digits : "<em style='color: red'>请输入整数金额</em>",
				min:"<em style='color: red'>提现金额最少为1元</em>",
			},
		},
		onfocusout : function(element) {
			$(element).valid();
		},
		invalidHandler : function(form, validator) { // 不通过回调
			return false;
		}
	});
	
	
	$.validator.addMethod("validatMoney",
			function(value, element) {
				return parseInt(value) <= parseInt(getQueryString("money"));
			}, "<em style='color: red'>余额不足</em>");
	

	
	
})
