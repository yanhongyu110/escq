
#allmap {
	width: 100%;
	height: 98%;
	margin: 5px 0;
}
.map_frame_main_fn{
	width: 100%;
	height: 5%;
}

.tangram-suggestion-main {  
    position: absolute;  
    z-index: 12345;  
    left: 542px;  
    top: 128px;  
    width: 300px;  
}  

#suggestId{
	width:200px;
	height: 20px;
	padding-left: 5px;
	line-height: 20px;
	font-size: 12px;
	position: absolute;
	right: 5px;
	top: 74px;
	z-index: 99;
}

#currentCity{
	color: #f00;
}
#searchResultPanel{
	border:1px solid #C0C0C0;
	width:200px;
	height:auto; 
	display:none;
}

#fixed{
	top:87%;
	position: absolute;
	width: 80px;
	height: 30px;
	display: block;
	line-height: 30px;
	text-align: center;
	right: 5px;
	bottom: 20px;
	z-index: 90;
	border-radius: 30px;
	background: #333;
	color: #fff;
}

.map_frame{
	top: 0px;
	display: none;
	position: fixed;
	width: 100%;
	height: 92%;
	border: 1px solid #c5c5c5;
	border-radius: 5px;
	overflow: hidden;
	background: #fff;
	font-family:"微软雅黑";
	font-size:12px;
	overflow: hidden;
	z-index: 10000;
}
.map_frame a{
	text-decoration: none;
}

.map_frame_top{
	width: 98%;
	height: 5%;
	margin: 2px;
	border: 1px solid #ddd;
	border-radius: 5px;
	background: #e9e9e9;
}
.map_frame_top_title{
	float: left;
	height: 27px;
	line-height: 36px;
	width: 100px;
	margin-left: 20px;
	font-size: 14px;
	font-weight: bold;
}
.map_frame_top_close{
	float: right;
	margin-right: 20px;
}

.map_frame_top_close a{
	width: 18px;
	height: 18px;
	border: 1px solid #999;
	display: block;
	font-weight: 900;
	font-size: 16px;
	color: #000;
	margin: 8px 0;
	text-align: center;
	border-radius: 5px;
	line-height: 18px;
}
.map_frame_top_close a:hover{
	background: #ddd;
}
.map_frame_main{
	width: 98%;
	height: 88%;
	margin: 2px;
}
