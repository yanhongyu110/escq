                <li id="newPassicon"></li>
            </ul>
            <ul class="personer_mes_zl_ms">
                <li>确认密码</li>
                <li class="mes_input">
                    <input id="confirmPass" placeholder="至少输入6个字符" type="password"/>
                </li>
