body{ font-family: "微软雅黑";}
.admin-panel {clear: both;margin: 50px auto;}
.content_about{ margin: 0 auto; width:1110px;font-size: 14px; min-height: 1000px;}

/*slidebar侧边栏*/
.slidebar {width: 20%;min-height: 520px;float: left;border-right: 1px solid rgb(235,235,235);background-color:#464857; border-radius: 6px;}
.slidebar .logo {height: 145px;}
.slidebar ul {padding: 0;margin:0;}
.slidebar li {list-style-type: none;	margin: 0;	position: relative;	height: 40px;line-height: 40px;text-align: center;font-size: 16px;}
.slidebar li a:before {content: "";speak: none;font-weight: normal;font-variant: normal;text-transform: none;position: absolute;display: block;-webkit-font-smoothing: antialiased;}
.slidebar ul a {color: #ccc;text-decoration: none;display: block;text-transform: capitalize;}
.slidebar li:hover a {background-color: rgb(255,255,255);color: #FB5A5A;}
/*slidebar_right*/
.slidebar_right {float: right;width: 75%;position: relative;}
/*mainContent*/
.mainContent{ }
.mainContent>div{position: absolute;opacity: 0;-webkit-transition:opacity 200ms linear;-moz-transition:opacity 200ms linear;-ms-transition:opacity 200ms linear;transition:opacity 200ms linear;}
/*通过opacity来切换不同的选项卡*/
.mainContent>div:target {opacity: 1;}
#dashboard { width: 100%;}
#dashboard h2{ font-size:16px; font-weight:550;color: #333; font-family: "微软雅黑"; border-bottom: 1px solid #ddd; padding-bottom: 10px;}
#dashboard p{ padding: 20px 0; line-height: 25px;}

/*logo*/
.slidebar .logo a {width: 88px;height: 88px;display: inline-block;position: relative;left: 50%;top: 50%;margin: -45px 0 0 -45px;border: 1px solid rgb(200,200,200);border-radius: 50%;background-color: rgb(214,214,214);}
.slidebar .logo a:before {content: "";width: 70px;height: 70px;font-size: 16px;text-align: center;position: absolute;top: 8px;left: 8px;border-radius: 35px;border: 1px solid rgb(210,210,210);display: inline-block;background: -webkit-linear-gradient(top, rgb(255,255,255), rgb(245,245,245));background: -moz-linear-gradient(top, rgb(255,255,255), rgb(245,245,245));background: -ms-linear-gradient(top, rgb(255,255,255), rgb(245,245,245));background: linear-gradient(top, rgb(255,255,255), rgb(245,245,245));}
.targeted{ background-color:#FB5A5A;color: #fff;}
.fond_zj{ clear: both; margin:0 0 30px 0; text-align: center; color: #999;}
.fond_zj h2{ font-size: 18px; color: #ccc; padding-bottom: 5px;}
.fond_zj h4{ font-size: 12px;}

.terms-center-text{ clear: both;}
.terms-center-text p{ line-height: 25px; color: #666;}
.terms-center-text .exemption-clause{ font-size: 16px; font-weight: bold; margin-bottom: 30px; border-bottom: 1px solid #ddd; padding-bottom: 10px;}
